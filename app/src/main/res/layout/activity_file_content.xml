<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.panzhiev.a111minutessimplefilemanager.ui.activities.FileContentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_file_content"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/enter_file_content"/>

        <Button
            android:id="@+id/btn_save_file"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="@string/btn_save_file"/>

        <TextView
            android:id="@+id/tv_file_content"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="File Content"/>
    </LinearLayout>
</LinearLayout>
