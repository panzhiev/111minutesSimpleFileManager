<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.panzhiev.a111minutessimplefilemanager.ui.activities.MainActivity">

    <EditText
        android:id="@+id/et_file_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="@string/enter_file_name"/>

    <Button
        android:id="@+id/btn_save_file"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_save_file"/>

    <Button
        android:id="@+id/btn_open_directory"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/btn_open_directory"/>

</LinearLayout>
